<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/users_fragment_recycler"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:layout_below="@+id/users_refresh_fragment_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        android:id="@+id/users_progressbar_fragment"
        style="?android:attr/progressBarStyleLarge"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/users_refresh_fragment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="refresh"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Error"
        android:id="@+id/error_users_fragment"
        android:visibility="invisible"
        android:layout_above="@+id/users_progressbar_fragment"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="repeat"
        android:visibility="invisible"
        android:id="@+id/repeat_users_fragment_button"
        android:layout_below="@+id/error_users_fragment"
        android:layout_centerHorizontal="true" />

</RelativeLayout>